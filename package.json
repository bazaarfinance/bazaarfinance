  "scripts": {
    "deploy:kovan": "npx hardhat --config hardhat.kovan-staging-config.ts run scripts/kovan-deployment.ts --network kovan",
    "deploy:frontend": "cd client && cd client && SKIP_PREFLIGHT_CHECK=true yarn react-app:deploy",
    "start:frontend": "cd client && cd client && SKIP_PREFLIGHT_CHECK=true yarn react-app:start",
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint ---fix -ext=.js,.jsx,.ts,.tsx .",
    "node": "npx hardhat node --watch",
    "solhint": "npx solhint -f table contracts/**/*.sol",
    "test": "npx hardhat test ./test/unit/**/*.ts",
    "test-integration": "npx hardhat --config hardhat.integration-test-config.ts test ./test/integration/**/*.ts"
